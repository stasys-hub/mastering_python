<MyGrid>

    name: myname
    email: myemail

    GridLayout:
        cols:1
        size: root.width -100, root.height -100
        pos: 50, 50
        GridLayout:
            cols:2
            Label:
                text: "Name: "

            TextInput:
                id: myname
                multiline:False

            Label:
                text: "Email: "

            TextInput:
                id: myemail
                multiline:False

        Button:
            text:"Submit"
            on_press:root.btn()
